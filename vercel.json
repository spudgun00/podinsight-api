{
  "regions": ["lhr1"],
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 30,
      "runtime": "python3.11"
    }
  },
  "env": {
    "PYTHONPATH": "."
  },
  "rewrites": [
    {
      "source": "/api/diag",
      "destination": "/api/diag"
    },
    {
      "source": "/api/diag/(.*)",
      "destination": "/api/diag"
    },
    {
      "source": "/api/sentiment_analysis_v2",
      "destination": "/api/sentiment_analysis_v2"
    },
    {
      "source": "/api/test_audio",
      "destination": "/api/test_audio"
    },
    {
      "source": "/api/hello",
      "destination": "/api/hello"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ]
}
